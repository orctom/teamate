extends layout/layout
block styles
	link(rel='stylesheet', href='/css/fullcalendar.css')
	link(rel='stylesheet', href='/css/fullcalendar.print.css' media='print')
	link(rel='stylesheet', href='/css/pick-a-color-1.2.3.min.css')
block content
	.row
		.col-sm-3
			.row(style='margin-top: 20px;')
				.col-sm-12
					table.table.table-striped.table-bordered.table-hover
						tbody
							tr
								th Users
							if users
								each user, i in users
									tr
										td
											a(href="#" onclick="loadActivity('#{user.username}')") #{user.name}
			.row
				.col-sm-12
					img#commitChartDay
					img#commitChartHour
					iframe#commitCalendar(frameBorder='0' width='100%' height='100')
		.col-sm-9
			h1.page-header Activities 
				i(style='font-size: 0.6em;') Please select user from left table
			.row.page-title-tools
				button.btn.btn-default(onclick='reloadEvents();') Reload
			#calendar
block scripts
	script(src='/js/jquery/jquery-ui-1.11.1.min.js')
	script(src='/js/calendar/moment.min.js')
	script(src='/js/calendar/fullcalendar.js')
	script(src='/js/color/tinycolor-0.9.15.min.js')
	script(src='/js/color/pick-a-color-1.2.3.min.js')
	script(src='/js/teamate/activity.js')