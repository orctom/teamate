extends layout/layout-login
block title 
	title TeamMate Login
block content
	.row
		.col-lg-12
			h1.login-page-header Team Mate

	.row
		.col-lg-8.col-lg-offset-2
			.panel.panel-default
				.panel-heading Login with your JIRA account
				.panel-body
					if msg
						.alert.alert-warning #{msg}
					form(action='/login', method='POST', role='form')
						fieldset
							.form-group
								input.form-control(type='text', required, name='username' value='hao.chen2' placeholder='JIRA Username' autofocus)
							.form-group
								input.form-control(type='password', required, name='password' value='' placeholder='JIRA Password')
						button.btn.btn-primary.btn-lg.btn-block(type='submit') Login 
		