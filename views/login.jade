extends layout/layout
block title 
	title Login
block content
	.row
		.col-lg-12
			h1.page-header Login

	.row
		.col-lg-8.col-lg-offset-2
			.panel.panel-default
				.panel-heading Login with your JIRA account
				.panel-body
					if failed
						.alert.alert-warning Invalid username or password!
					form(action='/login', method='POST', role='form')
						fieldset
							.form-group
								input.form-control(type='text', required, name='username' placeholder='JIRA Username' autofocus)
							.form-group
								input.form-control(type='password', required, name='password' placeholder='JIRA Password')
						button.btn.btn-primary.btn-lg.btn-block(type='submit') Login 
		