extends ../layout/layout

block content
	.row
		.col-lg-12
			h1.page-header Todo List

	.row
		.col-lg-12
			.panel.panel-default
				.panel-heading My ToDo List
				.panel-body
					table.table
						thead
							tr
								th &nbsp;
								th ToDo
								th Tags
						tbody
							each todo, i in todos
								tr
									td
										a(href='todo/edit?id=#{todo._id}') Edit
									td #{todo.content}
									td dummy tags
	.row
		.col-lg-12
			.btn-group
				a(href='todo/add').btn.btn-default Add
		