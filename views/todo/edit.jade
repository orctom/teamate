extends ../layout/layout

block content
	.row
		.col-lg-12
			h1.page-header 
				a(href='/todo') Todo List
				|&nbsp;-&nbsp;Edit
			.panel.panel-default
				.panel-heading Edit Todo Item
				.panel-body
					form(action='/todo/save', method='POST', role='form')
						fieldset
							.form-group
								input.form-control(type='hidden', name='_id' value='#{todo._id}' )
							.form-group
								input.form-control(type='text', required, name='content' value='#{todo.content}' placeholder='content' autofocus)
						button.btn.btn-primary.btn-lg(type='submit') Save
		