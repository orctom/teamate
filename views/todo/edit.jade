extends ../layout/layout

block content
	.row
		.col-lg-12
			h1.page-header Todo List - Add

	.row
		.col-lg-12
			.panel.panel-default
				.panel-heading Add Todo Item
				.panel-body
					form(action='save', method='POST', role='form')
						fieldset
							.form-group
								input.form-control(type='hidden', name='_id' value='#{todo._id}' )
							.form-group
								input.form-control(type='text', required, name='content' value='#{todo.content}' placeholder='content' autofocus)
						button.btn.btn-primary.btn-lg.btn-block(type='submit') Save
		